@model IEnumerable<CSModel.ViewModels.QuestionList>

@{
    ViewBag.Title = "問題";
}

<h2>問題</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table2">
	<thead>
		<tr>
			<th style="width: 5%;" class="no-sort">序號</th>
			<th style="width: 10%;">問題編號</th>
			<th style="width: 10%;">優先權</th>
			<th style="width: 10%;">問題類別</th>
			<th style="width: 10%;">標題</th>
			<th style="width: 20%;">內容</th>
			<th style="width: 10%;">處理狀態</th>
			<th style="width: 10%;">申報日期</th>
			<th style="width: 5%;" class="no-sort"></th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td></td>
				<td>
					@Html.DisplayFor(modelItem => item.q_code)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.q_priority)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.q_kind)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.q_title)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.q_content)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.q_status)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.apply_date_desc)
				</td>
				<td>
					@Html.ActionLink("明細", "Detail", new { QCode = item.q_code })
				</td>
			</tr>
		}
	</tbody>
</table>